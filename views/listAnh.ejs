<div class="container">


  <div style="display: grid; margin-top: 30px; grid-template-columns: 1fr 1fr 1fr;">
    <% if(data.length != 0){ %>
    <% for (var i=0;i<data.length;i++){ %>
      <div>
        <% var _id= data[i]._id %>
        <h4 class="text-center"><%= data[i].tenAnh %></h4>
        <img style="width: 360px; height: 220px" src="<%=data[i].linkAnh %>">
        <p><%= data[i].noiDung%></p>
        <div style="display: grid; margin-top: 30px; grid-template-columns: 1fr 1fr;">
          <form  method="post" action="/deleteCar" >
            <input  name="__id" hidden value=<%= _id %>>
            <button style="width: 50% ;background-color: red" type="submit">Xóa</button>
          </form>
          <form method="post" action="/editAnh">
            <input name="__id" hidden value=<%= _id %>>
            <input name="__tenAnh" hidden value=<%= data[i].tenAnh %>>
            <input name="__noiDung" hidden value=<%= data[i].noiDung %>>
            <input name="__linkAnh" hidden value=<%= data[i].linkAnh %>>
            <button style="width: 50%; background-color: chartreuse" type="submit">Sửa</button>
          </form>

        </div>
      </div>
    <% } %>
    <% } else {%>
      <h1>No data</h1>
      <% } %>

  </div>

</div>




